<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:include schemaLocation="../Magento/Mtf/Data/etc/types.xsd"/>

    <xs:element name="config">
        <xs:annotation>
            <xs:documentation>
                The root element for configuration data.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="fixture" maxOccurs="unbounded" minOccurs="1">
                    <xs:annotation>
                        <xs:documentation>
                            An element that contains configuration data of a fixture.
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="fixture">
        <xs:complexType>
            <xs:choice maxOccurs="unbounded">
                <xs:element name="data_config" type="dataConfigType" maxOccurs="unbounded" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            An element that contains configuration information
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="field" type="fixtureField" maxOccurs="unbounded" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            An element that contains fixture field settings.
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:choice>
            <xs:attribute type="notEmptyType" name="name" use="required">
                <xs:annotation>
                    <xs:documentation>
                        The name of the fixture.
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="module" use="optional">
                <xs:annotation>
                    <xs:documentation>
                        Module of the fixture
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="type">
                <xs:annotation>
                    <xs:documentation>
                        Fixture type
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="entity_type">
                <xs:annotation>
                    <xs:documentation>
                        Fixture entity type
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="collection">
                <xs:annotation>
                    <xs:documentation>
                        Entity collection class name
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="repository_class">
                <xs:annotation>
                    <xs:documentation>
                        Repository class name
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="handler_interface">
                <xs:annotation>
                    <xs:documentation>
                        Handler interface name (for persisting fixture)
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="class">
                <xs:annotation>
                    <xs:documentation>
                        Class name of the fixture
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute type="notEmptyType" name="extends" use="optional">
                <xs:annotation>
                    <xs:documentation>
                        The name of the parent fixture
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute name="product_type" use="optional">
                <xs:annotation>
                    <xs:documentation>
                        The name of the fixture.
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute name="identifier" use="optional">
                <xs:annotation>
                    <xs:documentation>
                        The name of the fixture.
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="dataConfigType">
        <xs:sequence>
            <xs:element name="item" maxOccurs="unbounded" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>
                        An element that contains fixture field settings.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:element name="dataset">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="field" maxOccurs="unbounded" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            An element that contains fixture field settings.
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
            <xs:attribute type="notEmptyType" name="name" use="required">
                <xs:annotation>
                    <xs:documentation>
                        The name of the dataset.
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="fixtureField">
        <xs:sequence>
            <xs:element ref="default_value" maxOccurs="unbounded" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>
                        An element that contains default value of a field.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
        <xs:attribute type="notEmptyType" name="name" use="required">
            <xs:annotation>
                <xs:documentation>
                    The name of the field.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="is_required">
            <xs:annotation>
                <xs:documentation>
                    Is field required for filling.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="group">
            <xs:annotation>
                <xs:documentation>
                    Is field required for filling.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute type="notEmptyType" name="source">
            <xs:annotation>
                <xs:documentation>
                    Is field required for filling.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute type="notEmptyType" name="repository">
            <xs:annotation>
                <xs:documentation>
                    Is field required for filling.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <xs:element name="default_value"/>

    <xs:simpleType name="notEmptyType">
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
